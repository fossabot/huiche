<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.0.0.RELEASE</version>
    </parent>
    <groupId>com.github.jmjlbmn</groupId>
    <artifactId>huiche</artifactId>
    <version>1.0.5</version>
    <packaging>pom</packaging>
    <modules>
        <module>huiche-core</module>
        <module>huiche-config</module>
        <module>huiche-extra</module>
    </modules>
    <name>HuiChe Framework</name>
    <description>HuiChe Framework</description>
    <url>https://github.com/jmjlbmn</url>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>jmjlbmn</id>
            <name>Maning</name>
            <email>jmjlbmn@163.com</email>
        </developer>
    </developers>
    <properties>
        <huiche.version>1.0.5</huiche.version>
        <java.version>1.8</java.version>
        <argLine>-Dfile.encoding=${project.build.sourceEncoding}</argLine>
        <druid.version>1.1.8</druid.version>
        <jsr305.version>3.0.2</jsr305.version>
        <!--预设依赖版本,没用到,但常用的依赖-->
        <reflections.version>0.9.11</reflections.version>
    </properties>
    <scm>
        <connection>scm:git:git@github.com:jmjlbmn/huiche.git</connection>
        <developerConnection>scm:git:git@github.com:jmjlbmn/huiche.git</developerConnection>
        <url>git@github.com:jmjlbmn/huiche.git</url>
    </scm>
    <dependencyManagement>
        <dependencies>
            <!--外部依赖-->
            <!--QueryDSL,用于数据库查询-->
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-sql-spring</artifactId>
                <version>${querydsl.version}</version>
            </dependency>
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-sql</artifactId>
                <version>${querydsl.version}</version>
            </dependency>
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-sql-codegen</artifactId>
                <version>${querydsl.version}</version>
            </dependency>
            <!--Druid数据库连接池-->
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid-spring-boot-starter</artifactId>
                <version>${druid.version}</version>
            </dependency>
            <!--JSR305-->
            <dependency>
                <groupId>com.google.code.findbugs</groupId>
                <artifactId>jsr305</artifactId>
                <version>${jsr305.version}</version>
            </dependency>
            <!--内部依赖-->
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-annotation</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-java</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-service</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-service-impl</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-web</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-spring-boot-starter</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-sql-builder</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-codegen-querydsl</artifactId>
                <version>${huiche.version}</version>
            </dependency>

            <!--预设依赖版本,没用到,但常用的依赖-->
            <dependency>
                <groupId>org.reflections</groupId>
                <artifactId>reflections</artifactId>
                <version>${reflections.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <forkMode>once</forkMode>
                    <argLine>${argLine}</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>huicheDeploy</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.sonatype.plugins</groupId>
                        <artifactId>nexus-staging-maven-plugin</artifactId>
                        <version>1.6.8</version>
                        <extensions>true</extensions>
                        <configuration>
                            <serverId>oss</serverId>
                            <nexusUrl>https://oss.sonatype.org/</nexusUrl>
                            <autoReleaseAfterClose>true</autoReleaseAfterClose>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-release-plugin</artifactId>
                        <version>2.5.3</version>
                        <configuration>
                            <autoVersionSubmodules>true</autoVersionSubmodules>
                            <useReleaseProfile>false</useReleaseProfile>
                            <releaseProfiles>release</releaseProfiles>
                            <goals>deploy</goals>
                        </configuration>
                    </plugin>
                    <!-- Source -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Javadoc -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <additionalparam>-Xdoclint:none</additionalparam>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- GPG -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <distributionManagement>
                <snapshotRepository>
                    <id>oss</id>
                    <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
                </snapshotRepository>
                <repository>
                    <id>oss</id>
                    <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>
</project>