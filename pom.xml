<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.jmjlbmn</groupId>
    <artifactId>huiche</artifactId>
    <version>1.0.6</version>
    <packaging>pom</packaging>
    <modules>
        <module>huiche-core</module>
        <module>huiche-config</module>
        <module>huiche-extra</module>
    </modules>
    <name>HuiChe Framework</name>
    <description>HuiChe Framework</description>
    <url>https://github.com/jmjlbmn/huiche</url>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>Jmjlbmn</name>
            <email>jmjlbmn@163.com</email>
        </developer>
    </developers>
    <properties>
        <huiche.version>1.0.6</huiche.version>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <spring-boot.version>2.0.0.RELEASE</spring-boot.version>
        <druid.version>1.1.9</druid.version>
        <querydsl.version>4.2.1</querydsl.version>
        <!--预设依赖版本,没用到,但常用的依赖-->
        <reflections.version>0.9.11</reflections.version>
    </properties>
    <scm>
        <url>https://github.com/jmjlbmn/huiche</url>
    </scm>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!--外部依赖-->
            <!--Druid数据库连接池-->
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid-spring-boot-starter</artifactId>
                <version>${druid.version}</version>
            </dependency>
            <!--QueryDSL,用于数据库查询-->
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-sql-spring</artifactId>
                <version>${querydsl.version}</version>
            </dependency>
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-sql</artifactId>
                <version>${querydsl.version}</version>
            </dependency>
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-core</artifactId>
                <version>${querydsl.version}</version>
            </dependency>
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-sql-codegen</artifactId>
                <version>${querydsl.version}</version>
            </dependency>
            <!--内部依赖-->
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-annotation</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-java</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-service</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-service-impl</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-core-web</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-spring-boot-starter</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-sql-builder</artifactId>
                <version>${huiche.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.jmjlbmn</groupId>
                <artifactId>huiche-codegen-querydsl</artifactId>
                <version>${huiche.version}</version>
            </dependency>

            <!--预设依赖版本,没用到,但常用的依赖-->
            <dependency>
                <groupId>org.reflections</groupId>
                <artifactId>reflections</artifactId>
                <version>${reflections.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <repositories>
        <!--优先阿里云-->
        <repository>
            <id>aliyun</id>
            <name>Aliyun Maven</name>
            <url>http://maven.aliyun.com/nexus/content/groups/public/</url>
        </repository>
        <!--替补,再找一次中心仓库-->
        <repository>
            <id>central-bench</id>
            <name>Maven Central Bench</name>
            <url>http://central.maven.org/maven2/</url>
        </repository>
        <!--OSS Snapshots-->
        <repository>
            <id>oss-snapshots</id>
            <name>OSS Snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <!--Spring Snapshots-->
        <repository>
            <id>spring-snapshots</id>
            <name>Spring Snapshots</name>
            <url>https://repo.spring.io/libs-snapshot</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${spring-boot.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <profiles>
        <profile>
            <id>huicheDeploy</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>3.0.1</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <distributionManagement>
                <snapshotRepository>
                    <id>oss</id>
                    <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
                </snapshotRepository>
                <repository>
                    <id>oss</id>
                    <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>
</project>